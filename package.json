{
  "name": "tree-of-life-agency",
  "version": "0.1.0",
  "private": true,
  "description": "Tree of Life Agency Platform - Internal development collaboration tool",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate --schema=./libs/shared-database/prisma/schema.prisma && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:coverage:check": "jest --coverage --passWithNoTests --silent | grep -o '[0-9]*\\.[0-9]*' | head -1",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "type-check": "tsc --noEmit",
    "server:dev": "nodemon server/server.ts",
    "server:build": "tsc -p server/tsconfig.json",
    "server:start": "node dist/server/server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "audit:security": "npm audit --audit-level=high",
    "audit:fix": "npm audit fix",
    "screenshots": "ts-node scripts/capture-screenshots.ts"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.0",
    "@prisma/client": "^6.15.0",
    "@react-three/drei": "^9.114.0",
    "@react-three/fiber": "^8.17.10",
    "@thirdweb-dev/react": "^4.9.4",
    "@thirdweb-dev/sdk": "^4.0.95",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "framer-motion": "^10.16.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.292.0",
    "morgan": "^1.10.1",
    "next": "^14.0.0",
    "pino-pretty": "^13.1.1",
    "postcss": "^8.4.0",
    "prisma": "^6.15.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.6.0",
    "resend": "^6.0.3",
    "stripe": "^18.5.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.0",
    "thirdweb": "^5.67.1",
    "three": "^0.179.1",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2"
  }
}
